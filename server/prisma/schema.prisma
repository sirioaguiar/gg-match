generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id       String @id @default(uuid())
  title    String
  imageUrl String

  groups Group[]
}

model Group {
  id            String   @id @default(uuid())
  gameId        String
  name          String
  discord       String
  gameDays      String
  hourInit      Int
  hourEnd       Int
  useMicrophone Boolean
  createdDate   DateTime @default(now())

  game Game @relation(fields: [gameId], references: [id])
}
