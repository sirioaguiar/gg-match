generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id       Int     @id @default(autoincrement())
  name     String
  username String  @unique
  password String
  groups   Group[]
  posts    Post[]
}

model Game {
  id       Int     @id @default(autoincrement())
  title    String  @unique
  imageUrl String
  groups   Group[]
}

model Group {
  id            Int      @id @default(autoincrement())
  name          String
  discord       String
  gameDays      String
  hourInit      Int
  hourEnd       Int
  useMicrophone Boolean
  createdDate   DateTime @default(now())
  ratingStars   String
  game          Game     @relation(fields: [gameId], references: [id])
  gameId        Int
  owner         Player   @relation(fields: [ownerId], references: [id])
  ownerId       Int
  posts         Post[]
  players       String   @default("")
  maxPlayers    Int      @default(10)
}

model Post {
  id          Int      @id @default(autoincrement())
  text        String
  createdDate DateTime @default(now())
  group       Group    @relation(fields: [groupId], references: [id])
  groupId     Int
  owner       Player   @relation(fields: [ownerId], references: [id])
  ownerId     Int
}
